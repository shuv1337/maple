---
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const {
    title = "Maple â€” OpenTelemetry Observability",
    description = "Open-source observability platform for traces, logs, and metrics. Built on OpenTelemetry.",
    image = "/og-image.png",
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const absoluteImage = image.startsWith("http")
    ? image
    : new URL(image, Astro.site).toString();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="192x192" href="/logo192.png" />
        <link rel="manifest" href="/manifest.json" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content={description} />
        <meta name="theme-color" content="#000000" />
        <meta name="robots" content="index,follow" />
        <link rel="canonical" href={canonicalUrl} />
        <link rel="dns-prefetch" href="https://cdn.brandfetch.io" />
        <link rel="preconnect" href="https://cdn.brandfetch.io" crossorigin />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Maple" />
        <meta property="og:locale" content="en_US" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={absoluteImage} />
        <meta property="og:url" content={canonicalUrl} />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="@maple_dev" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={absoluteImage} />
        <meta name="generator" content={Astro.generator} />
        <script
            is:inline
            src="https://analytics.ahrefs.com/analytics.js"
            data-key="VKnjG071OvfESS7TIl25eA"
            async></script>
        <title>{title}</title>
    </head>
    <body class="min-h-screen antialiased">
        <slot />
    </body>
</html>
