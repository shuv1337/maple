---
import Layout from "../../layouts/Layout.astro";
import Nav from "../../components/Nav.astro";
import FeatureHero from "../../components/FeatureHero.astro";
import ComparisonTable from "../../components/ComparisonTable.astro";
import FeatureDetailGrid from "../../components/FeatureDetailGrid.astro";
import BottomCTA from "../../components/BottomCTA.astro";
import Footer from "../../components/Footer.astro";
import SeoHead from "../../components/SeoHead.astro";
import { competitors, featureOrder } from "../../lib/competitors";

const competitor = competitors.datadog;
const pageTitle = `Maple vs Datadog — Open Source Alternative`;
const pageDescription = `Compare Maple and Datadog for observability. Maple offers transparent usage-based pricing, native OpenTelemetry support, and AI-powered diagnostics — fully open source.`;
---

<Layout title={pageTitle} description={pageDescription}>
    <SeoHead title={pageTitle} description={pageDescription} />
    <Nav />
    <FeatureHero
        label="Compare"
        title="Maple vs Datadog"
        subtitle="Datadog is powerful but comes with complex per-host pricing and proprietary agents. Maple delivers the same distributed tracing, logs, and metrics with transparent usage-based pricing, native OpenTelemetry support, and zero vendor lock-in."
    />

    <ComparisonTable
        competitorName={competitor.name}
        features={competitor.features}
        featureOrder={featureOrder}
    />

    <!-- Why choose Maple -->
    <section class="py-24 md:py-32">
        <div class="mx-auto max-w-6xl px-6">
            <div class="mb-10">
                <span class="inline-block border border-border px-3 py-1 text-[11px] text-accent uppercase tracking-wider mb-4">
                    Why choose Maple
                </span>
                <h2 class="text-2xl sm:text-3xl font-bold text-fg">Key advantages over Datadog</h2>
            </div>

            <FeatureDetailGrid items={[
                { title: "Transparent pricing", description: "Simple usage-based pricing with no per-host fees, no hidden costs, and no surprise bills at the end of the month." },
                { title: "OpenTelemetry native", description: "Built from the ground up on OpenTelemetry standards. No proprietary agents to install or maintain — use the instrumentation you already have." },
                { title: "AI & MCP integration", description: "Diagnose issues faster with AI-powered root cause analysis and MCP tool integration for automated observability workflows." },
                { title: "Fully open source", description: "Inspect every line of code, contribute features, and trust that your observability platform has no black boxes." },
                { title: "No vendor lock-in", description: "Your data stays in open formats. Switch providers or self-host at any time — your instrumentation never needs to change." },
                { title: "Self-hosting available", description: "Run Maple on your own infrastructure for complete data sovereignty, compliance, and cost control." },
            ]} />
        </div>
    </section>
    <BottomCTA />
    <Footer />
</Layout>
