---
import AppMock from './AppMock.astro';
---

<section class="relative min-h-screen pt-[47px] overflow-hidden">
    <!-- Grid background -->
    <div class="absolute inset-0 pointer-events-none" style="
        background-image:
            linear-gradient(to right, oklch(1 0 0 / 4%) 1px, transparent 1px),
            linear-gradient(to bottom, oklch(1 0 0 / 4%) 1px, transparent 1px);
        background-size: 60px 60px;
        mask-image: radial-gradient(ellipse 70% 50% at 50% 30%, black, transparent);
    "></div>

    <div class="relative mx-auto max-w-6xl px-6 pt-24 md:pt-32">
        <!-- Badge -->
        <div class="mb-6">
            <span class="inline-block border border-border px-3 py-1 text-[11px] text-fg-muted">
                OpenTelemetry native
            </span>
        </div>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-fg leading-tight max-w-4xl">
            Traces, logs, and metrics<br />
            in a <span class="text-gradient-accent">single pane.</span>
        </h1>

        <!-- Subtitle -->
        <p class="mt-5 text-sm md:text-base text-fg-muted max-w-xl leading-relaxed">
            Open-source observability built on OpenTelemetry. No vendor lock-in. Designed for developers who ship fast.
        </p>

        <!-- Dual CTAs -->
        <div class="mt-8 flex flex-wrap items-center gap-4">
            <a href="/waitlist" class="bg-accent text-accent-foreground px-6 py-2.5 text-sm font-medium hover:opacity-90 transition-opacity">
                Join the waitlist
            </a>
            <span class="relative group cursor-default opacity-40 border border-border px-6 py-2.5 text-sm font-medium text-fg">
                View on GitHub
                <span class="pointer-events-none absolute -top-8 left-1/2 -translate-x-1/2 whitespace-nowrap bg-bg border border-border px-2 py-1 text-[10px] text-fg-muted opacity-0 group-hover:opacity-100 transition-opacity">
                    Coming soon
                </span>
            </span>
        </div>

        <!-- App mock with glow -->
        <div class="mt-16 md:mt-20 relative">
            <div class="absolute inset-0 pointer-events-none" style="
                box-shadow: 0 0 120px 40px oklch(0.68 0.15 237 / 0.08);
            "></div>
            <AppMock />
        </div>
    </div>
</section>
