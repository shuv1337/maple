---
interface Props {
    items: Array<{ question: string; answer: string }>;
}

const { items } = Astro.props;
---

<section class="py-24 md:py-32">
    <div class="mx-auto max-w-3xl px-6">
        <span class="text-[11px] text-accent uppercase tracking-wider">FAQ</span>
        <h2 class="mt-3 text-2xl md:text-3xl font-bold text-fg mb-12">Frequently asked questions</h2>

        <div class="divide-y divide-border border-t border-border">
            {items.map(item => (
                <details class="faq-item">
                    <summary class="flex items-center justify-between py-5 cursor-pointer text-sm font-medium text-fg select-none">
                        <span>{item.question}</span>
                        <span class="ml-4 shrink-0 text-fg-muted">
                            <svg class="faq-plus w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 5v14M5 12h14" />
                            </svg>
                            <svg class="faq-minus w-4 h-4 hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12h14" />
                            </svg>
                        </span>
                    </summary>
                    <div class="pb-5 text-sm text-fg-muted leading-relaxed">
                        {item.answer}
                    </div>
                </details>
            ))}
        </div>
    </div>
</section>

<style is:global>
    .faq-item[open] .faq-plus {
        display: none;
    }
    .faq-item[open] .faq-minus {
        display: block;
    }
</style>
